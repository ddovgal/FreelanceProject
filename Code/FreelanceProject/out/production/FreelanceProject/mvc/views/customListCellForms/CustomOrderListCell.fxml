<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" prefHeight="92.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mvc.controllers.customList.OrderCell">
    <children>
        <VBox alignment="CENTER_LEFT" minWidth="170.0" prefWidth="170.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="100.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <children>
                        <Label fx:id="orderTitleLabel" text="orderName">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <ImageView fx:id="isDoneImage" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../images/noDev.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <Label fx:id="priceLabel" text="price">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <Label fx:id="deadlineLabel" text="deadline">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
            </children>
            <HBox.margin>
                <Insets bottom="5.0" left="20.0" top="5.0" />
            </HBox.margin>
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="descriptionLabel" text="description" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
        </VBox>
        <VBox alignment="CENTER_LEFT" minWidth="160.0" prefWidth="160.0">
            <children>
                <Label text="Current developer:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <ImageView fx:id="devImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/user.jpg" />
                            </image>
                        </ImageView>
                        <Label fx:id="devSnfLabel" text="devSnf">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
            <HBox.margin>
                <Insets bottom="5.0" right="20.0" top="10.0" />
            </HBox.margin>
        </VBox>
    </children>
</HBox>
